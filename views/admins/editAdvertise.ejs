<!DOCTYPE html>
<html>

<head>
    <title></title>
</head>

<body>
    <%- include ('../layout') %>
    <div class="container">
        <h3 class="my-4" align="center">แก้ไขข้อมูลโฆษณา</h3>
        <a href="/admins/chambers" class="btn btn-info">ย้อนกลับ</a>
        <br>
        <br>
        <br>
        <% advertises.forEach(function(advertise){ %>
        <form action="/admins/editAdvertise" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <h6><label for="">ชื่อโฆษณา : </label></h6>
                <input type="text" name="name" value="<%= advertise.name %>" class="form-control">
            </div>
            <input type="hidden" name="id" value="<%= advertise._id %>">
            <div class="form-group">
                <h6><label for="">รายละเอียด : </label></h6>
                <textarea name="description" rows="4" cols="80"
                    class="form-control"><%= advertise.description %></textarea>
            </div>
            <div class="form-group">
                <h6><label for="">รูปภาพ : </label></h6>
                <input type="file" name="image" value="" class="form-control">
            </div>
            <br>
            <input type="submit" name="" value="อัพเดทข้อมูล" class="btn btn-success">
        </form>
        <% }) %>
    </div>
</body>

</html>