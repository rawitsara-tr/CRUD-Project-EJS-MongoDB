            <div class="form-group">
                <h6><label for="">ชื่อของท่าน : </label></h6>
                <input type="text" name="fname" value="" class="form-control">
            </div>
            <div class="form-group">
                <h6><label for="">นามสกุล : </label></h6>
                <input type="text" name="lname" value="" class="form-control">
            </div>
            <div class="form-group">
                <h6><label for="">โทรศัพท์ : </label></h6>
                <input type="text" name="phone" value="" class="form-control">
            </div>
            <div class="form-group">
                <label for="">Email :</label>
                <input type="text" name="email" value="" class="form-control">
            </div>
            <div class="form-group">
                <h6><label for="">ข้อความ : </label></h6>
                <textarea name="message" rows="4" cols="80" class="form-control"></textarea>
            </div>
        <div class="form-group">
            <input type="hidden" name="status" value="รอดำเนินการ" class="btn btn-outline-white" style="color: white ">
      </div>

            <br>
            <input type="submit" name="" value="ส่งให้เรา" class="btn btn-success">
